@model Department

@{
    Layout = "_CoordinatorLayout";
}

<h2>Detaljer för ärendet</h2>
@await Component.InvokeAsync("LoggedIn")

<!--Nedan kommer ViewComponent att klistras in-->
@await Component.InvokeAsync("Errand", ViewBag.ID)


<!--Nedan kopplar koordinatorn en avdelning till ett ärende-->
<section id="bottomColumn">
    <h3>Redigera ärende</h3>

    <form asp-controller="Coordinator" asp-action="AssignDepartmentToErrand" asp-route-id="ViewBag.ID" method="post">
        <p>
            Ange enhet:
            <select asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.DepartmentList, "DepartmentId", "DepartmentName"))">
                <option selected="selected">Välj</option>
            </select>
        </p>

        <p>
            <input class="button" type="submit" value="Spara ändringarna" />
        </p>

    </form>
</section>