@model Errand

@{
    Layout = "_ManagerLayout";
}

<h2>Detaljer för ärendet</h2>
@await Component.InvokeAsync("LoggedIn")

<!--Nedan kommer ViewComponent att klistras in-->
@await Component.InvokeAsync("Errand", ViewBag.ID)


<!--Nedan kopplar chefen en utredare till ett ärende-->
<section id="bottomColumn">
    <h3>Redigera ärende</h3>
 
    <form asp-controller="Manager" asp-action="AssignInvestigatorToErrand" asp-route-id="ViewBag.ID" method="post">
        <p>
        Ange handläggare:
         <select asp-for="EmployeeId" asp-items="@(new SelectList(ViewBag.DeptEmployees, "EmployeeId", "EmployeeName"))">
                <option selected="selected">Välj</option>
            </select>
        </p>
        <p><input type="checkbox" name="noAction" value="true" /> Ingen åtgärd: <input type="text" asp-for="InvestigatorInfo" value="Ange motivering" /></p>
    <p><input class="button" type="submit" value="Spara" /></p>
    </form>
</section>

</div>